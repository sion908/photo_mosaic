{
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.languageServer": "Pylance",
  "python.autoComplete.extraPaths": [
    "${workspaceFolder}/.venv/lib/python3.11/site-packages"
  ],
  "python.analysis.extraPaths": [
    "${workspaceFolder}/.venv/lib/python3.11/site-packages"
  ],
  "python.analysis.exclude": [
    "python_modules/",
    ".venv/",
  ],
  "flake8.path": [
    ".venv/bin/pflake8"
  ],
  "flake8.args": [
    "src/",
    "--max-line-length=120",
    "--ignore=E203,E402,E266,W503,B008",
    "--max-complexity=10",
    "--max-expression-complexity=7",
    "--max-cognitive-complexity=7"
  ],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true,
    ".pytest_cache/": true,
    "python_modules/": true,
    // ".venv/": true,
  },
}